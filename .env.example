# Port Configuration
FRONTEND_PORT=3001
BACKEND_PORT=8001

# Backend Configuration
BACKEND_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3001,http://localhost

# Frontend Configuration
VITE_API_URL=http://localhost:8001
VITE_WS_URL=ws://localhost:8001

# Trainer Configuration
CUDA_VISIBLE_DEVICES=0
TRAINER_BATCH_SIZE=256
TRAINER_ITERATIONS=100
TRAINER_SELF_PLAY_GAMES=10
TRAINER_MCTS_SIMULATIONS=100
TRAINER_CPUCT=1.5
TRAINER_CHECKPOINT_DIR=/app/models
TRAINER_DATA_DIR=/app/data

# GitOps Configuration
GITOPS_POLL_INTERVAL=30
GITOPS_ENABLE_AUTO_PULL=true
GITOPS_ENABLE_AUTO_DEPLOY=true
GITOPS_ENABLE_AUTO_COMMIT=true
GITOPS_ENABLE_AUTO_PUSH=false
GIT_USER_NAME=AutoGrandmaster Bot
GIT_USER_EMAIL=bot@autograndmaster.local
GITHUB_TOKEN=

# Database (optional, start with SQLite)
DATABASE_URL=sqlite:///./data/autograndmaster.db

# Logging
LOG_LEVEL=INFO
